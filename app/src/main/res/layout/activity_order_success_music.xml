<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderSuccessMusic"
    android:background="@color/toolbar">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation"
        android:layout_width="325dp"
        android:layout_height="377dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.201"
        app:lottie_autoPlay="true"
        app:lottie_fileName="me.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/bkc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AAYE! NACHO\n\t\t\t\t\t SAARE!!"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/go_to_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animation" />


    <Button
        android:id="@+id/go_to_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GO TO MAIN MENU"
        android:textColor="#ffff"
        android:background="@color/splash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.997" />


</androidx.constraintlayout.widget.ConstraintLayout>